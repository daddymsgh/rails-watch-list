<section class="cinemabg py-5 text-center">
  <div class="container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light text-white">My Watchlists</h1>
        <p class="lead text-white">Select a watchist and enjoy your selection of movies</p>
        <p>
            <%= link_to new_list_path, class: 'btn btn-primary my-2' do %>
        Create a watchlist
      <% end %>
        </p>
      </div>
    </div>
    </div>
  </section>
    <div class="container">
    <h2 class="mt-3 mb-3">All my watchlists</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% @lists.each do |list| %>
      <div class="col">
      <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= list.name %></text></svg>
            <div class="card-body">
              <p class="card-text"><%= list.name %> Watchlist</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                <%= link_to "Edit", list_path(list), class: 'btn btn-sm btn-outline-secondary' %>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
                </div>
                <small class="text-body-secondary">12h 41min</small>
              </div>
            </div>
          </div>
          </div>
    <% end %>
    </div>
</div>
